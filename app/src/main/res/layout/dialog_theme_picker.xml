<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.DialogTitle
        android:padding="10dp"
        android:id="@+id/title"
        style="?android:attr/windowTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:ellipsize="end"
        android:paddingTop="@dimen/abc_dialog_padding_top_material"
        android:singleLine="true"
        android:text="Card Picker"
        android:textAlignment="viewStart"
        android:textSize="16sp" />

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.sphinx.mix.theme.TintImageView
            android:id="@+id/theme_pink2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_card_bigdp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_pick_item"
            app:backgroundTint="@color/red" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible" />

        <com.example.sphinx.mix.theme.TintImageView
            android:id="@+id/theme_purple2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_card_bigdp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_pick_item"
            app:backgroundTint="@color/purple" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible" />

        <com.example.sphinx.mix.theme.TintImageView
            android:id="@+id/theme_blue2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_card_bigdp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_pick_item"
            app:backgroundTint="@color/blue" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible" />

        <com.example.sphinx.mix.theme.TintImageView
            android:id="@+id/theme_green2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_card_bigdp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_pick_item"
            app:backgroundTint="@color/green" />
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.sphinx.mix.theme.TintImageView
            android:id="@+id/theme_green_light2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_card_bigdp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_pick_item"
            app:backgroundTint="@color/green_light" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible" />

        <com.example.sphinx.mix.theme.TintImageView
            android:id="@+id/theme_yellow2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_card_bigdp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_pick_item"
            app:backgroundTint="@color/yellow" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible" />

        <com.example.sphinx.mix.theme.TintImageView
            android:id="@+id/theme_orange2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_card_bigdp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_pick_item"
            app:backgroundTint="@color/orange" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible" />

        <com.example.sphinx.mix.theme.TintImageView
            android:id="@+id/theme_red2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_card_bigdp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_pick_item"
            app:backgroundTint="@color/pink" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible" />

        <com.example.sphinx.mix.theme.TintButton
            android:id="@+id/button2"
            style="?attr/buttonBarNegativeButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:background="?attr/selectableItemBackground"
            android:text="取消"
            android:textColor="@color/text_color" />

        <com.example.sphinx.mix.theme.TintButton
            android:id="@+id/button1"
            style="?attr/buttonBarPositiveButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:text="确认"
            android:textColor="@color/text_color" />
    </LinearLayout>

</LinearLayout>
